extends layout

block content
  h1= title
  - var results=res;
  div(class="container-fluid mt-3 mystyle")
    - let create = `dispatch(\"/animals/create\")`
    button.btn(class="btn-secondary ml-1", onClick=create) Create New Animal
    div(class="container-fluid")
     div(class="row m-1")
       each item in results
        - let destination = `dispatch(\"/animals/update?id=${item._id}\")`
        - let detail = `dispatch(\"/animals/detail/?id=${item._id}")`
        - let deleteItem = `dispatch(\"/animals/delete/?id=${item._id}")`
        div(class="row-sm-2", class="m-1") name is #{item.name} <br /> lifetime is #{item.lifetime} <br /> color is #{item.color}
        button.btn( class="btn-primary ml-1", onclick= destination) Update 
        button.btn( class="btn-success buttonCustom", onclick= detail) Details
        button.btn( class="btn-danger buttonCustom", onclick= deleteItem) Delete
  script. 
    function dispatch(path){ 
      window.location.href=path 
    } 
        
      
